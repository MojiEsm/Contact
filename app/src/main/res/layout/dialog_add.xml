<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btn_Dialog_Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/actionBarItemBackground"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_Add_CircleImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:src="@drawable/person"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/iransans"
            android:text="نام و نام خانوادگی:"
            android:textColor="@color/textLight"
            android:textSize="15dp" />



        <EditText
            android:id="@+id/edt_FullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_edittext"
            android:elevation="10dp"
            android:fontFamily="@font/irsansfanum"
            android:gravity="start"
            android:outlineSpotShadowColor="@color/background"
            android:padding="10dp"
            android:textSize="14dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/iransans"
            android:text="شماره تلفن:"
            android:textColor="@color/textLight"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edt_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bg_edittext"
            android:elevation="10dp"
            android:fontFamily="@font/irsansfanum"
            android:gravity="start"
            android:inputType="number"
            android:outlineSpotShadowColor="@color/background"
            android:padding="10dp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/iransans"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="ثبت"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>
</RelativeLayout>